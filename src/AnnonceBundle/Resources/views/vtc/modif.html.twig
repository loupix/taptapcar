        <!-- TRAJET UNIQUE -->
        <!-- TRAJET UNIQUE -->
        <div class="trajet_unique_form col-xs-12 is-open">
            {{ form_start(form, {'attr':{'ng-controller':'vtcModifCtrl', 'ng-model':'submit_form'}}) }}
                <div class="bloc_info row" ng-init="init('{{ vtc.id }}')">
                    <h2>Informations sur la société</h2>
                    {{ form_label(form.nom_societe, "Nom de votre société", {'label_attr':{'class':'col-xs-12 col-sm-4'}})}}
                    {{ form_errors(form.nom_societe) }}
                    {{ form_widget(form.nom_societe, {'attr':{'class':'connexion_input col-xs-12 col-sm-8'}})}}


                    {{ form_label(form.ville, "Votre ville", {'label_attr':{'class':'col-xs-12 col-sm-4'}})}}
                    {{ form_errors(form.ville) }}
                    <input type="text" id="from" name="from" class="connexion_input col-xs-12 col-sm-8" g-places-autocomplete options="autocompleteOptions" force-selection="true" ng-model='place' ng-change="loadPlace('ville')" required="required" placeholder="De"  />

                    {{ form_label(form.telephone_societe, "Téléphone", {'label_attr':{'class':'col-xs-12 col-sm-4'}})}}
                    {{ form_errors(form.telephone_societe) }}
                    {{ form_widget(form.telephone_societe, {'attr':{'class':'connexion_input col-xs-12 col-sm-8'}})}}
                </div>

                
                <div class="bloc_info row">
                    <h2>Horaires de service</h2>

                    <div class="info_important col-xs-12" for="annonce_prix">Les horaires correspondent au temps où souhaitez que l'annonce soit visible.</div>


                    {{ form_label(form.heureDebut, "Heure de début", {'label_attr':{'class':'col-xs-12 col-sm-4'}})}}
