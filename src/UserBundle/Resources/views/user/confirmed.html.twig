{% extends "::base.html.twig" %}

{% block fos_user_content %}
	<div class="login_error modal_connexion_container col-xs-12 col-sm-offset-3 col-sm-6 col-md-offset-3 col-md-6 col-lg-offset-4 col-lg-4">
	    <p>{{ 'registration.confirmed'|trans({'%username%': user.prenom+" "+user.nom}, 'FOSUserBundle') }}</p>
	    {% if app.session is not empty %}
	        {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
	        {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans({}, 'FOSUserBundle') }}</a></p>{% endif %}
	    {% endif %}
	</div>
{% endblock fos_user_content %}
